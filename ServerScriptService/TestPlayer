local Players = game:GetService("Players")

-- Fungsi untuk membuat pemain test
local function createTestPlayer(name)
    local player = Instance.new("Player")
    player.Name = name
    player.Parent = Players
    
    -- Buat character
    local character = Instance.new("Model")
    character.Name = name
    character.Parent = workspace
    
    -- Buat Humanoid
    local humanoid = Instance.new("Humanoid")
    humanoid.Parent = character
    
    -- Buat HumanoidRootPart
    local rootPart = Instance.new("Part")
    rootPart.Name = "HumanoidRootPart"
    rootPart.Anchored = false
    rootPart.CanCollide = false
    rootPart.Parent = character
    
    -- Buat body parts
    local head = Instance.new("Part")
    head.Name = "Head"
    head.Size = Vector3.new(2, 1, 1)
    head.Parent = character
    
    local torso = Instance.new("Part")
    torso.Name = "Torso"
    torso.Size = Vector3.new(2, 2, 1)
    torso.Parent = character
    
    -- Position
    character:SetPrimaryPartCFrame(CFrame.new(0, 5, 0))
    
    player.Character = character
    
    return player
end

-- Buat 2 pemain test
local player1 = createTestPlayer("TestPlayer1")
local player2 = createTestPlayer("TestPlayer2")

print("Created 2 test players for turn-based system testing")

-- Auto start game setelah 2 detik
task.wait(2)

-- Trigger game start
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local turnEvent = ReplicatedStorage:FindFirstChild("TurnSystemEvent")

if turnEvent then
    -- Simulasi game start
    local playersInGame = {player1, player2}
    turnEvent:FireAllClients("GameStarted", playersInGame, 1, 20)
    print("Game started with test players")
else
    warn("TurnSystemEvent not found")
end